{
  "name": "safestats",
  "version": "1.1.2",
  "description": "A lightweight, isomorphic analytics library that collects anonymous metrics without compromising user privacy. Works in Node.js and the browser.",
  "type": "module",
  
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },

  "files": [
    "dist"
  ],

  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Imran-IO/safestats.git"
  },
  
  "author": "Muhammad Imran <imranbwpk@gmail.com>",
  "license": "MIT",
  "keywords": [
    "analytics",
    "privacy",
    "gdpr",
    "ccpa",
    "anonymous",
    "tracking",
    "metrics",
    "isomorphic",
    "universal",
    "browser",
    "nodejs"
  ],
  "bugs": {
    "url": "https://github.com/Imran-IO/safestats/issues"
  },
  "homepage": "https://github.com/Imran-IO/safestats#readme",
  "dependencies": {
    "@actions/core": "^1.10.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "eslint": "^9.5.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.5",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.0.0"
  }
}